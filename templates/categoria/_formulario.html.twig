{% extends 'base.html.twig' %}

{% block contenedor_principal %}
    {% include 'comunes/_mensajes.html.twig' %}
    <form method="POST">
        <div class="form-group">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" id="nombre" value="{{ categoria.nombre }}" name="nombre" placeholder="Nombre" />
        </div>
        <div class="form-group">
            <label for="Color">Color</label>
            <input type="color" class="form-control" id="color"  value="{{ categoria.color }}" name="color" placeholder="Color">
        </div>
        <input type="hidden" name="_token" value="{{ csrf_token('categoria') }}">
        <button type="submit" class="btn btn-outline-success">Submit</button>
    </form>
{% endblock %}